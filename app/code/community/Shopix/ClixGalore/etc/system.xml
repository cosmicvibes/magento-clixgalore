<config>
    <sections>
        <checkout>
            <groups>
                <clixgalore translate="label">
                    <label>clixGalore Transaction Code</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <adid translate="label comment">
                            <label>clixGalore Ad ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </adid>
                    </fields>
                </clixgalore>
            </groups>
        </checkout>
    </sections>
</config>

